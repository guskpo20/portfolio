---
import { getLanguageFromURL, useTranslations } from "../i18n/utils";

const { pathname } = Astro.url;
const currentLang = getLanguageFromURL(pathname);
const t = useTranslations(currentLang);
const year = new Date().getFullYear();
---

<footer class="footer">
    <div class="container">
        <div class="footer-content">
            <div class="social-links">
                <a
                    href="https://github.com/guskpo20"
                    target="_blank"
                    rel="noopener noreferrer"
                    aria-label="GitHub"
                >
                    <img
                        src="/github.svg"
                        alt="GitHub"
                        width="24"
                        height="24"
                    />
                </a>
                <a
                    href="https://www.linkedin.com/in/gustavo-keymetlian"
                    target="_blank"
                    rel="noopener noreferrer"
                    aria-label="LinkedIn"
                >
                    <img
                        src="/linkedin.svg"
                        alt="LinkedIn"
                        width="24"
                        height="24"
                    />
                </a>
            </div>
            <p class="copyright">
                &copy; {year} &bull; {t("footer.text")}
            </p>
        </div>
    </div>
</footer>

<style lang="scss">
    @import "../styles/variables.scss";

    .footer {
        background-color: var(--card-bg);
        border-top: 1px solid var(--card-border, #eaeaea);
        padding: 2rem 0;
        margin-top: auto;
    }

    .footer-content {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1.5rem;
        text-align: center;
    }

    .social-links {
        display: flex;
        gap: 1.5rem;

        a {
            display: flex;
            align-items: center;
            transition:
                transform 0.2s,
                opacity 0.2s;

            img {
                filter: var(--icon-filter, brightness(0));
                opacity: 0.8;
                transition: opacity 0.2s;

                :global([data-theme="dark"]) & {
                    filter: brightness(0) invert(1);
                }
            }

            &:hover {
                opacity: 1;
                transform: translateY(-2px);

                img {
                    opacity: 1;
                }
            }
        }
    }

    .copyright {
        font-family: $font-family-base;
        font-size: 0.9rem;
        color: $heading-color; // var(--text-main) for better visibility
        text-align: center;
    }
</style>
